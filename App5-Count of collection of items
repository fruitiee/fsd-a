collection>collection.component.html
<div class="container">
  <h2>My Collection</h2>

  <p>Total Items: {{ itemCount }}</p>

  <input #itemInput type="text" placeholder="Enter item name" />
  <button (click)="addItem(itemInput.value); itemInput.value=''">Add Item</button>

  <ul>
    <li *ngFor="let item of collection; let i = index">
      {{ item.name }}
      <button class="remove" (click)="removeItem(i)">Remove</button>
    </li>
  </ul>
</div>

